<!DOCTYPE html>
<html>

<head>
    <title>Admin Threads</title>
    <link rel="stylesheet" href="/css/bulma.min.css">
</head>

<body>
    <section class="section">
        <div class="container">
            <%- include('partials/admin-navbar') %>
                <h1 class="title">All Threads</h1>
                <table class="table is-fullwidth">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Author</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% threads.forEach(t=> { %>
                            <tr>
                                <td>
                                    <%= t.id %>
                                </td>
                                <td>
                                    <%= t.title %>
                                </td>
                                <td>
                                    <%= t.username %>
                                </td>
                                <td>
                                    <%= t.created_at.toLocaleString() %>
                                </td>
                                <td>
                                    <a class="button is-small is-info" href="/admin/threads/<%= t.id %>/edit">Edit</a>
                                    <form method="POST" action="/admin/threads/<%= t.id %>/delete"
                                        style="display:inline" onsubmit="return confirm('Delete thread?');">
                                        <button class="button is-small is-danger" type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <a class="button" href="/admin">Back to Dashboard</a>
        </div>
    </section>
</body>

</html>