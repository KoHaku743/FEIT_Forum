<%- include('partials/header') %>
    <div class="container">
        <div class="content">
            <%- include('partials/sidebar') %>
                <main>
                    <h1>Edit <%= type==='thread' ? 'Thread' : 'Comment' %>
                    </h1>
                    <form
                        action="<%= type === 'thread' ? '/thread/' + item.id + '/edit' : '/comments/comment/' + item.id + '/edit' %>"
                        method="POST" style="max-width:600px;">
                        <% if (type==='thread' ) { %>
                            <label for="title">Title:</label>
                            <input type="text" id="title" name="title" value="<%= item.title %>" required
                                style="width:100%;margin-bottom:1em;">
                            <% } %>
                                <label for="body">Body:</label>
                                <textarea id="body" name="body" required
                                    style="width:100%;height:150px;"><%= item.body %></textarea>
                                <br>
                                <button type="submit">Save Changes</button>
                    </form>
                </main>
        </div>
    </div>