<!DOCTYPE html>
<html>

<head>
    <title>Admin Comments</title>
    <link rel="stylesheet" href="/css/bulma.min.css">
</head>

<body>
    <section class="section">
        <div class="container">
            <%- include('partials/admin-navbar') %>
                <h1 class="title">All Comments</h1>
                <table class="table is-fullwidth">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Body</th>
                            <th>Author</th>
                            <th>Thread</th>
                            <th>Created At</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% comments.forEach(c=> { %>
                            <tr>
                                <td>
                                    <%= c.id %>
                                </td>
                                <td>
                                    <%= c.body %>
                                </td>
                                <td>
                                    <%= c.username %>
                                </td>
                                <td>
                                    <%= c.thread_title %>
                                </td>
                                <td>
                                    <%= c.created_at.toLocaleString() %>
                                </td>
                                <td>
                                    <a class="button is-small is-info" href="/admin/comments/<%= c.id %>/edit">Edit</a>
                                    <form method="POST" action="/admin/comments/<%= c.id %>/delete"
                                        style="display:inline" onsubmit="return confirm('Delete comment?');">
                                        <button class="button is-small is-danger" type="submit">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
                <a class="button" href="/admin">Back to Dashboard</a>
        </div>
    </section>
</body>

</html>