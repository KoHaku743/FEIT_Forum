<%- include('partials/header') %>
    <div style="background:#f6f8fa;min-height:100vh;padding-top:3em;padding-bottom:3em;">
        <div class="container" style="max-width:400px;margin:0 auto;">
            <div class="box" style="padding:2.5em 2.5em 2em 2.5em;border-radius:18px;box-shadow:0 2px 16px 0 #0001;">
                <div style="text-align:center;margin-bottom:1.5em;">
                    <span style="font-size:2.2em;color:#0079d3;">
                        <i class="fas fa-user-circle"></i>
                    </span>
                    <h2 class="title is-4" style="color:#0079d3;margin:0.5em 0 0 0;font-weight:700;">Log In</h2>
                </div>
                <% if (typeof error !=='undefined' && error) { %>
                    <div class="notification is-danger" style="margin-bottom:1em;">
                        <%= error %>
                    </div>
                    <% } %>
                        <form action="/login" method="POST">
                            <div class="field">
                                <label class="label">Username</label>
                                <div class="control has-icons-left">
                                    <input class="input" type="text" name="username" placeholder="Enter your username"
                                        required autofocus>
                                    <span class="icon is-small is-left">
                                        <i class="fas fa-user"></i>
                                    </span>
                                </div>
                            </div>
                            <div class="field">
                                <label class="label">Password</label>
                                <div class="control has-icons-left">
                                    <input class="input" type="password" name="password"
                                        placeholder="Enter your password" required>
                                    <span class="icon is-small is-left">
                                        <i class="fas fa-lock"></i>
                                    </span>
                                </div>
                            </div>
                            <div style="height:1.5em;"></div>
                            <button class="button is-link is-fullwidth" type="submit"
                                style="font-size:1.1em;border-radius:8px;">Log In</button>
                            <div style="margin:2em 0 1em 0;border-bottom:1px solid #eee;"></div>
                            <div style="text-align:center;">
                                <span style="color:#888;">Don't have an account?</span>
                                <a href="/signup"
                                    style="color:#0079d3;font-weight:bold;margin-left:0.5em;transition:color 0.2s;"
                                    onmouseover="this.style.color='#005fa3'"
                                    onmouseout="this.style.color='#0079d3'">Sign up</a>
                            </div>
                        </form>
            </div>
        </div>
    </div>